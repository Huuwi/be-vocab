{
  "compilerOptions": {
    "target": "ES2016",
    "module": "Node16",
    "baseUrl": "./",
    "paths": {
      "@services/*": [
        "src/services/*"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@database/*": [
        "src/database/*"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}